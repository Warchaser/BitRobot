<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>BitRobot</display-name>
  <servlet>
    <servlet-name>SendQuery</servlet-name>
    <servlet-class>servlet.SendQuery</servlet-class>
    <!-- <load-on-startup>1</load-on-startup>  -->
  </servlet>
  <servlet>
    <servlet-name>LoadExpertListOnInit</servlet-name>
    <servlet-class>servlet.LoadExpertListOnInit</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>SendQuery</servlet-name>
    <url-pattern>/servlet/SendQuery</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoadExpertListOnInit</servlet-name>
    <url-pattern>/servlet/LoadExpertListOnInit</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>pages/ExpertRobot.jsp</welcome-file>
  </welcome-file-list>
</web-app>